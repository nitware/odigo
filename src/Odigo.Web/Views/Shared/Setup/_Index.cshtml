<div class="panel panel-default">
    <div class="panel-body">

        @if (TempData["Message"] != null)
        {
            @Html.Partial("_Message", (Odigo.Model.Model.ApplicationMessage)TempData["Message"])
            <hr />
        }

        @if (Model != null && Model.Count() > 0)
        {
            if (ViewBag.IsIndex != null && ViewBag.IsIndex == true)
            {
                <div>
                    <div class="row">
                        <div class="col-md-12">
                            @Html.ActionLink("Create New", "Create")

                            <div class="pull-right record-count-label" style="margin-bottom:10px">
                                <span class="badge-caption">Record Count</span><span class="badge">@Model.Count()</span>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <div class="row">
                <div class="col-md-12">
                    <div class="table-responsive " style="font-size:9pt">
                        <table class="table table-condensed grid-table table-head-alt mb30">
                            <thead>
                                <tr class="well" style="height:40px; vertical-align:middle">
                                    <th>
                                        @*@Html.CheckBox("selectAllFirstSemester")*@
                                    </th>
                                    <th>
                                        Name
                                    </th>
                                    <th>
                                        Description
                                    </th>
                                </tr>
                            </thead>

                            @foreach (Ahhwall_S.Model.Setup item in Model)
                            {
                                <tr>
                                    <td>
                                        <a href="@Url.Action("Edit", new { id = item.Id })" title="Edit">
                                            <img src="@Url.Content("~/Content/Images/edit_icon.png")" alt="Edit" />
                                        </a>

                                        <a href="@Url.Action("Delete", new { id = item.Id })" title="Delete">
                                            <img src="@Url.Content("~/Content/Images/delete_icon.png")" alt="Delete" />
                                        </a>
                                    </td>

                                    <td>
                                        @Html.DisplayFor(model => item.Name)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(model => item.Description)
                                    </td>
                                </tr>
                            }

                        </table>

                    </div>
                </div>
            </div>
        }

    </div>













































