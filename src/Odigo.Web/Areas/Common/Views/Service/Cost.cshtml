                                if (selectedId == 2) {
                                    window.location.href = '@Url.Action("Form", "Subscription", new { Area = "Teacher"})';
                                }
                                else if (selectedId == 3 || selectedId == 4) {
                                    window.location.href = '@Url.Action("Form", "Registration", new { Area = "Employer"})';
                                }
                            }
                            else {
                                alert(jsonResult.message);
                            }
